#include <iostream>
using namespace std;

void convertSeconds(int totalSeconds) {
    int days = totalSeconds / 86400;
    int hours = (totalSeconds % 86400) / 3600;
    int minutes = (totalSeconds % 3600) / 60;
    int seconds = totalSeconds / 60;  

    cout << totalSeconds << " секунд = ";
    cout << days << " дн. " << hours << " час. ";
    cout << minutes << " мин. " << seconds << " сек." << endl;
}

void convertSantimeters(int santimeters) {
    int kilometers = santimeters / 10000;  
    int meters = (santimeters % 100000) / 100;
    int santi = santimeters % 100;
    cout << santimeters << " Сантиметров = ";
    cout << kilometers << " км. " << meters << " м. " << santi << "см." << endl;
}



void convertMinutes(int minutes) {
    int hours = minutes / 60;
    int days = hours / 24;  
    int remainingMinutes = minutes % 60;
    cout << minutes << " минут = ";
    cout << days << " дн. " << hours << " час. " << remainingMinutes << " мин." << endl;
}

void convertKilograms(float kg) {
    int grams = (kg - static_cast<int>(kg)) * 1000;  
    int tons = kg / 1000;
    cout << kg << " кг = ";
    cout << tons << " т. " << static_cast<int>(kg) << " кг. " << grams << " г." << endl;
}

void convertBytes(long bytes) {
    int kb = bytes / 1024;
    int mb = kb / 1024;
    int gb = mb / 1024;  
    cout << bytes << " байт = ";
    cout << gb << " ГБ " << mb << " МБ " << kb << " КБ " << bytes << " Б" << endl;
}

void convertCelsius(float celsius) {
    float fahrenheit = celsius * 9 / 5 + 32;  
    float kelvin = celsius + 273.15;
    cout << celsius << " °C = ";
    cout << fahrenheit << " °F и " << kelvin << " K" << endl;  
}

int main() {
    setlocale(LC_ALL, "ru");
    int i;

    cout << "Введите номер опции(1-6): ";  
    cin >> i;

    switch (i) {
    case 1: {
        int seconds;
        cout << "Введите количество секунд :\n";
        cin >> seconds;
        convertSeconds(seconds);
    }  
    case 2: {
        int santimeters;
        cout << "Введите количество сантиметров:\n";
        cin >> santimeters;
        convertSantimeters(santimeters);
    } 
    case 4: {
        float kg;
        cout << "Введите количество килограммов:\n";
        cin >> kg;
        convertKilograms(kg);
    }
    case 5: {
        long bytes;
        cout << "Введите количество байтов:\n";
        cin >> bytes;
        convertBytes(bytes);
    }
    case 6: {
        float celsius;
        cout << "Введите температуру в Цельсиях:\n";
        cin >> celsius;
        convertCelsius(celsius);
    }
    }
}